{{ 'homepage-reviews-slider-2.css' | asset_url | stylesheet_tag }}
{{ 'homepage-reviews-carousel.css' | asset_url | stylesheet_tag }}

{% assign has_metafield_reviews = false %}
{% if product.metafields.custom.review_title_1 != blank %}
  {% assign has_metafield_reviews = true %}
{% endif %}

<style>
  .homepage-reviews-slider__nav-button--prev {
    margin-left: 50px;
  }
  .homepage-reviews-slider__nav-button--next {
    margin-right: 50px;
  }
  .homepage-reviews-slider__text {
    align-self: start;
  }
</style>

<section
  class="homepage-reviews-slider"
  data-section-id="{{ section.id }}"
  data-section-type="homepage-reviews-slider"
  style="
    --homepage-reviews-slider-padding-top-desktop: {{ section.settings.section_padding_top_desktop }}px;
    --homepage-reviews-slider-padding-bottom-desktop: {{ section.settings.section_padding_bottom_desktop }}px;
    --homepage-reviews-slider-padding-top-mobile: {{ section.settings.section_padding_top_mobile }}px;
    --homepage-reviews-slider-padding-bottom-mobile: {{ section.settings.section_padding_bottom_mobile }}px;
    background-color: #FFFFFF;
  "
>
  <div class="homepage-reviews-slider__wrapper">
    {% if has_metafield_reviews or section.blocks.size > 0 %}
      <div class="carousel-container homepage-reviews-slider__carousel">
        <div class="carousel-track">
          {% comment %} --- LOGIC: RENDER FROM INDIVIDUAL METAFIELDS (1-5) --- {% endcomment %}
          {% if has_metafield_reviews %}
            {% for i in (1..5) %}
              {% assign title_key = 'review_title_' | append: i %}
              {% assign text_key = 'review_text_' | append: i %}
              {% assign author_key = 'review_author_' | append: i %}

              {% assign m_title = product.metafields.custom[title_key] %}
              {% assign m_text = product.metafields.custom[text_key] %}
              {% assign m_author = product.metafields.custom[author_key] %}

              {% if m_title != blank or m_text != blank %}
                <div class="review-slide">
                  <div class="homepage-reviews-slider__card">
                    <div class="homepage-reviews-slider__star-rating">
                      {% comment %} Hardcoded 5 stars {% endcomment %}
                      {% render 'icon-star' %}
                      {% render 'icon-star' %}
                      {% render 'icon-star' %}
                      {% render 'icon-star' %}
                      {% render 'icon-star' %}
                    </div>

                    {% if m_title != blank %}
                      <h3 class="homepage-reviews-slider__title">{{ m_title }}</h3>
                    {% endif %}

                    {% if m_text != blank %}
                      <div class="homepage-reviews-slider__text">
                        {{ m_text | metafield_tag }}
                      </div>
                    {% endif %}

                    <div class="homepage-reviews-slider__author-details">
                      {% if m_author != blank %}
                        <p class="homepage-reviews-slider__author-name">
                          {{ m_author }}
                          {% render 'homepage-reviews-slider-blue-checkmark' %}
                        </p>
                      {% endif %}
                    </div>
                  </div>
                </div>
              {% endif %}
            {% endfor %}

            {% comment %} --- LOGIC: FALLBACK TO BLOCKS --- {% endcomment %}
          {% else %}
            {% for block in section.blocks %}
              <div class="review-slide" {{ block.shopify_attributes }}>
                <div class="homepage-reviews-slider__card">
                  <div class="homepage-reviews-slider__star-rating">
                    {% render 'icon-star' -%}
                    {%- render 'icon-star' -%}
                    {%- render 'icon-star' -%}
                    {%- render 'icon-star' -%}
                    {%- render 'icon-star' %}
                  </div>

                  {% if block.settings.review_title != blank %}
                    <h3 class="homepage-reviews-slider__title">{{ block.settings.review_title }}</h3>
                  {% endif %}

                  {% if block.settings.review_text != blank %}
                    <div class="homepage-reviews-slider__text">{{ block.settings.review_text }}</div>
                  {% endif %}

                  <div class="homepage-reviews-slider__author-details">
                    {% if block.settings.author_image != blank %}
                      {% assign author_img = block.settings.author_image %}
                      <img
                        src="{{ author_img | image_url: width: 40 }}"
                        alt="{{ author_img.alt | default: block.settings.author_name | escape }}"
                        class="homepage-reviews-slider__author-image"
                        width="40"
                        height="40"
                        loading="lazy"
                      >
                    {% endif %}
                    {% if block.settings.author_name != blank %}
                      <p class="homepage-reviews-slider__author-name">
                        {{ block.settings.author_name }}
                      </p>
                    {% endif %}
                  </div>
                </div>
              </div>
            {% endfor %}
          {% endif %}
        </div>
      </div>

      {% if section.settings.button_link != blank and section.settings.button_label != blank %}
        <div class="homepage-reviews-slider__action-area">
          <a
            href="{{ section.settings.button_link }}"
            class="homepage-reviews-slider__button"
          >
            {{ section.settings.button_label }}
          </a>
        </div>
      {% endif %}

    {% else %}
      <div class="placeholder-content">
        {{ 'no_content' | t }}
      </div>
    {% endif %}
  </div>
  {% if section.settings.show_navigation_arrows %}
    <button class="carousel-arrow arrow-left homepage-reviews-slider__nav-button homepage-reviews-slider__nav-button--prev">
      {% render 'icon-arrow-left' %}
    </button>
    <button class="carousel-arrow arrow-right homepage-reviews-slider__nav-button homepage-reviews-slider__nav-button--next">
      {% render 'icon-arrow-right' %}
    </button>
  {% endif %}
</section>

<script src="{{ 'homepage-reviews-carousel.js' | asset_url }}" defer="defer"></script>

{% schema %}
{
  "name": "Product Page Reviews",
  "tag": "section",
  "class": "homepage-reviews-slider-section",
  "max_blocks": 15,
  "settings": [
    {
      "type": "header",
      "content": "Data Source"
    },
    {
      "type": "paragraph",
      "content": "This section looks for metafields 'custom.review_title_1' through 'custom.review_title_5'. If found, it displays those reviews. If not, it falls back to the blocks below."
    },
    {
      "type": "header",
      "content": "Carousel Behavior"
    },
    {
      "type": "checkbox",
      "id": "show_navigation_arrows",
      "label": "Show Navigation Arrows (Desktop Only)",
      "default": true
    },
    {
      "type": "header",
      "content": "Section Button"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Show me more reviews"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "section_padding_top_desktop",
      "label": "Padding Top (Desktop)",
      "min": 0,
      "max": 150,
      "step": 5,
      "unit": "px",
      "default": 80
    },
    {
      "type": "range",
      "id": "section_padding_bottom_desktop",
      "label": "Padding Bottom (Desktop)",
      "min": 0,
      "max": 150,
      "step": 5,
      "unit": "px",
      "default": 80
    },
    {
      "type": "range",
      "id": "section_padding_top_mobile",
      "label": "Padding Top (Mobile)",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "section_padding_bottom_mobile",
      "label": "Padding Bottom (Mobile)",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "review_card",
      "name": "Review Card (Fallback)",
      "settings": [
        {
          "type": "richtext",
          "id": "review_text",
          "label": "Review Text",
          "default": "<p>\"I use it nearly every day and it's completely revolutionized our backyard into a home spa.\"</p>"
        },
        {
          "type": "text",
          "id": "review_title",
          "label": "Review Title (Optional)",
          "default": "Love my Salus Sauna!!!!"
        },
        {
          "type": "image_picker",
          "id": "author_image",
          "label": "Author Image",
          "info": "Profile photo of the reviewer."
        },
        {
          "type": "text",
          "id": "author_name",
          "label": "Author Name",
          "default": "Reviewer Name"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Page Reviews",
      "blocks": [
        {
          "type": "review_card"
        },
        {
          "type": "review_card"
        },
        {
          "type": "review_card"
        }
      ]
    }
  ]
}
{% endschema %}
